<div id="nav_login">
<% if logged_in %>
  <div id="username">Logged in as <%= username %></div><div id="logout"><%= link_to "X", logout_url, remote: true %></div>
  <div class="clearfix"></div>
<% else %>
  <%= form_tag login_url, remote: true do %>
    <%= text_field_tag :name, params[:name], placeholder: "Username" %>

    <%= password_field_tag :password, params[:password], placeholder: "Password" %>

    <div>
      <%= hidden_field_tag :redirect_on_login, request.url %>
      <%= submit_tag "Login" %>
    </div>
  <% end %>
<% end %>
</div>
