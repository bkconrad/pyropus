<!DOCTYPE html>
<html>
<head>
  <title>Pyropus</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= google_fonts_link_tag(droid_sans: [400, 700],
                            orbitron: [400, 900],
                            cabin: [400],
                            arimo: [400],
                            karla: [400],
                            antic_slab: [400],
                            josefin_slab: [600],
                            cutive: [400],
                            graduate: [400],
                            nova_mono: [400],
                            concert_one: [400],
                            arvo: [700],
                            anton: [400],
                            asap: [700],
                            days_one: [400],
                            oleo_script: [400],
                            syncopate: [700]) %>
  <style type='pyropus/embeddedcss'>
  input#username-text, input#password-text {
    display: none;
  }
  </style>

</head>
<body>
<div id="wrapper">
<div id="messages">
  <div id="notice"><%= notice %></div>
  <div id="alert"><%= alert %></div>
</div>
<%= render partial: 'shared/header' %>

<div id="content">
<%= yield %>
</div>

<div class="clearfix">&nbsp;</div>
</div>
<%= render partial: 'shared/footer' %>
</body>
</html>
