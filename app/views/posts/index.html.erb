<% @posts.each do |post| %>
  <div class="post">
    <h3 class="posttitle"><%= post.title %></h3>
    <div class="postcontent"><%= post.content %></div>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %>
  </div>
<% end %>

