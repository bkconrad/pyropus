<%= javascript_include_tag "posteditor", type: "text/x-pyropus-js" %>
<%= form_for(@post, remote: true) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="wmd-panel">
        <div id="wmd-preview" class="wmd-panel wmd-preview"></div>
    <div id="wmd-button-bar"></div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, id: "wmd-input", class: "wmd-input" %>
    </div>
  </div>
  <div class="field">
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
